{% extends 'base.html.twig' %}
{% block title %}Fashion Modern Clothing Store - Home page{% endblock %}

{% block body %}
<h1>Home page</h1>
<h1>Fashion Modern Clothing Store</h1>

<img src="{{ asset('images/brands.jpg') }}" class="brandspic">
<p>Welcome to our Online Store "Fashion Modern clothing store"</p>
<p>Browse our exclusive collection and find your perfect outfit today!</p>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
body {
    background-color: lightskyblue;
}

a:link, a:visited {
    background-color: darkblue;
    color: white;
    border: 2px black;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    border-radius: 12px;
}

a:hover, a:active {
    background-color: black;
    color: lightskyblue;
}

.brandspic {
    display: block;
    margin: 0 auto;
    width: 300px;
    height: auto;
    border: 2px solid darkblue;
    border-radius: 5px;
}

h1, p {
    text-align: center;
    color: darkblue;
    margin: 10px auto;
    font-family: Arial, sans-serif;
}

/* Top right links */
.top-right-links {
    position: fixed;
    top: 50px;
    right: 20px;
    display: flex;
    gap: 20px;
}

/* Cards container */
.cards-container {
    display: flex;
    flex-wrap: wrap; /* allows wrapping to next line */
    justify-content: center; /* center cards horizontally */
    gap: 20px; /* spacing between cards */
    margin-top: 30px;
}

/* Card styling */
.product-card {
    width: 18rem;
    background-color: #007bff; /* Bootstrap primary */
    color: white;
    border-radius: 10px;
    overflow: hidden;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0,0,0,0.2);
}

.product-card img {
    width: 100%;
    height: auto;
    border-bottom: 1px solid darkblue;
}

.product-card .card-body {
    padding: 10px;
}
</style>

<div class="top-right-links">
    <a href="{{ path('shoppingCart') }}" class="shoppingC">Shopping Cart</a>
    <a href="{{ url('app_user_index') }}" class="account">Account</a>
</div>

<div class="cards-container">
    {% for productDetails in productDetailss %}
        <div class="product-card">
            {% if productDetails.imagePath %}
                <img src="{{ asset('uploads/' ~ productDetails.imagePath) }}" alt="{{ productDetails.Brand }}">
            {% endif %}
            <div class="card-body">
                <h5>{{ productDetails.ClothingName }}</h5>
                <p>{{ productDetails.Brand }}</p>
                <p>â‚¬{{ productDetails.Price }}</p>
            </div>
        </div>
    {% else %}
        <p>No products found</p>
    {% endfor %}
</div>

{% endblock %}
