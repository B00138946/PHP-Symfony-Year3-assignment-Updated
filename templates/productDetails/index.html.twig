{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <h1>Product Details</h1>

    <style>
        a:link, a:visited {
            background-color: darkblue;
            color: white;
            border: 2px black;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border-radius: 12px;
        }

        a:hover, a:active {
            background-color: black;
            color: lightskyblue;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            background-color: #183691;
            border-spacing: 0;
            border-radius: 10px;
            border: 1px solid black;

        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color:white;

        }

        tr:hover {background-color: #3b82f6;}
.product-image {
    width: 300px;
    height: auto;
    border: 2px solid darkblue;
    border-radius: 5px;
    display: block;
    margin: 0 auto;
}



    </style>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clothing Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productDetails in productDetailss %}
            <tr>
                <td>{{ productDetails.id }}</td>
                <td>{{ productDetails.ClothingName }}</td>
                <td>{{ productDetails.Brand }}</td>
                <td>{{ productDetails.Price }}</td>

                <td>
                    {% if productDetails.imagePath %}
                        <img src="{{ asset('uploads/' ~ productDetails.imagePath) }}" class="product-image" alt="Product Image">
                    {% else %}
                        No Image
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('app_productDetails_show', {'id': productDetails.id}) }}">show</a>
                    <a href="{{ path('app_productDetails_edit', {'id': productDetails.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_productDetails_new') }}">Create new</a>
{% endblock %}
